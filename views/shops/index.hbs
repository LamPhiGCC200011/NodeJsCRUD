<div style ="margin: 100px;">
    <form action="/doSearch" method ="POST">
        <div class = "form-group">
            <input type="text" class ="form-control" name="search">
        </div>
        <div class = "form-group">
            <input type="submit" class ="form-control" name="submit">
        </div>
    </form>

<div class="container" style ="padding:100px 0 0 0">
            <div class="row">
                {{#each list}}
                <div class="col-md-4">
                    <div class="card-mb-4"> 
                        <img src="https://www.w3schools.com/w3images/lights.jpg" alt="" class = "card-img-top" width="270px" height="270px">
                        <div class ="card-body">
                            <h5 class = "card-title">Name: {{ this.ToyName }}</h5>
                            <p class = "card-text">Quantity: {{ this.Quantity }}</p>
                            <p class = "card-text">Category: {{ this.Category }}</p>
                            <div class = "d-flex justify-content-between align-item-center">
                                <a href="" class="btn btn-success" style = "color:white; margin-left: 80px; background:black;" >View details</a>
                                <span class = "h5 mt-auto" style="margin-left: 50px;">{{ this.Price }} $
                                </span>
                            </div>
                        </div>

                    </div>
                </div>
                {{/each}}
            </div>
    </div>
</div>


    
