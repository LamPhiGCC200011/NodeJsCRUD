            <div class="row" style ="padding:10px 0 0 0;">
                {{#each list}}
                <div class="col-md-4">
                    <div class="card-mb-5"> 
                        <img src="/images/{{{ImagePath}}}" alt="" class = "card-img-top" width="270px" height="300px">
                        <div class ="card-body">
                            <h5 class = "card-title">Name: {{ this.ToyName }}</h5>
                            <p class = "card-text">Quantity: {{ this.Quantity }}</p>
                            <p class = "card-text">Category: {{ this.Category }}</p>
                            <div class = "d-flex justify-content-between align-item-center">
                                <a href="/toyshop/detail/{{this._id}}" class="btn btn-success" style = "color:white; margin-left: 80px; background:black;" >View details</a>
                                <span class = "h5 mt-auto" style="margin-left: 50px;">{{ this.Price }} $
                                </span>
                            </div>
                        </div>

                    </div>
                </div>
                {{/each}}
            </div>
    </div>
</div>


    
