<div class="container" style="padding:120px">
        <div class="row mt-3 mb-4">
            <div class="col-md-4">
                <img src="/images/{{{toy.ImagePath}}}" alt="" class = "card-img-top" width="270px" height="270px">
            </div>
            <div class="col-md-8">
                <h1 class = "mt-4 mt-md-0">{{ toy.ToyName }}</h1>
                <h2>Price: {{ toy.Price }} $</h2>
                <hr>
                <b> Description: </b>
                {{ toy.Description }}<br/>
                <b> Category: </b>
                {{ toy.Category }}<br/>
            </div>
        </div>
    </div>
    