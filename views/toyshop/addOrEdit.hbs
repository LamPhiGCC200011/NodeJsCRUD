<h3>{{viewTitle}}</h3>
<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{toy._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="fullName" value="{{toy.Toyname}}" placeholder="Full Name">
        <div class="text-danger">
            {{employee.fullNameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Image Path</label>
        <input type="email" class="form-control" name="email" value="{{toy.imagePath}}" placeholder="Email">
        <div class="text-danger">
            {{employee.emailError}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group md-6">
            <label>Price</label>
            <input type="text" name="mobile" placeholder="Mobile" value="{{toy.Price}}" class="form-control">

        </div>
        <div class="form-group md-6">
            <label>Quantity</label>
            <input type="text" name="city" placeholder="City" value="{{toy.Quantity}}" class="form-control">
        </div>
        <div class="form-group md-6">
            <label>Description</label>
            <input type="text" name="mobile" placeholder="Mobile" value="{{toy.Description}}" class="form-control">

        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
        <a href="/employee/list" class="btn btn-danger">
            <i class="fa fa-list-alt"></i>View All
        </a>
    </div>
</form>