<h3>
    <a href="/toyshop" class="btn btn-danger">
        <i class="fa fa-plus"> </i> Create New
    </a>
    Employee List
</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Image</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Description</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.ToyName}}</td>
            <td>{{this.ImagePath}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.Quantity}}</td>
            <td>{{this.Description}}</td>
            <td>{{this.Category}}</td>
            <td>
                <a href="/toyshop/{{this._id}}">
                    <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                </a>
                <a href="/toyshop/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record?');">
                    <i class="fa fa-trash fa-lg" aria-hidden="true">

                    </i>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>